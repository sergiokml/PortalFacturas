@page
@model IndexModel
@{
	ViewData["Title"] = "Buscador";
}

<form method="post" class="col-lg-6 offset-lg-3">
 <div class="form-group row justify-content-center">
  <img src="~/img/logo_cve_small.png" alt="">
 </div>

 <div class="form-group row justify-content-center">
  <label for="inputEmail" class="sr-only">Email address</label>
  <input type="email" name="UserName" placeholder="Email Address" class="form-control" required autofocus />
 </div>

 <div class="form-group row justify-content-center">
  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" name="Password" class="form-control" placeholder="Password" required autofocus />
 </div>

 <div class="checkbox mb-3">
           <label>
             <input asp-for="Recordar"/> @Html.DisplayNameFor(model => model.Recordar)
         </label>
     
 </div>
 <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
</form>


